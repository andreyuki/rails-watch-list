<div class="banner-list mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
  <div class="container">
    <h1 class="fw-bold fs-1"><strong><%= @list.name %></strong></h1>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @movies.each do |movie| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
        <%= movie.title %>
      </div>
    <% end %>
  </div>
</div>
